{
	"name": "auto-comment-header",
	"displayName": "Auto Comment Header",
	"description": "Automatically creates (and maintains) file headers for multiple languages.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.generateHeader",
				"title": "Generate Header"
			}
		],
		"configuration":[
			{
				"title": "Auto Header Generator",
				"properties": {
					"auto-header-generator.username": {
						"type": "string",
						"default": "anonymous",
						"description": "The name that will be set as creator of a file."
					},
					"auto-header-generator.searchLines": {
						"type": "number",
						"default": 20,
						"description": "Maximum number of lines to search for the desired data, such as the created date and if the header should be updated."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
